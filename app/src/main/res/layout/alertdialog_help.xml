<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="330dp"
    android:background="@drawable/radiusbg"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="X"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:background="@drawable/circleclose"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_title_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="HOW TO USE !!"
            android:textColor="#9C020638"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_eng_kh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="English - Khmer"
            android:textColor="#9C111D6D"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_kh_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Khmer - English"
            android:textColor="#9C111D6D"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_kh_kh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Khmer - Khmer"
            android:textColor="#9C111D6D"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>